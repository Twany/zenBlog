---
import SectionHeading from '../SectionHeading.astro';
import ManSilhouette from '../ManSilhouette.astro';
import { uiLabels } from '../../data/uiLabels';
import aboutData from '../../data/about.json';
import type { Locale } from '../../utils/i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props as Props;
const intro = aboutData.intro[lang];
const toolkit = aboutData.toolkit;
const quote = aboutData.quote;
---
<div class="max-w-7xl mx-auto px-6">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
    <div>
      <SectionHeading title={uiLabels.common.whoIs[lang]} />

      <div class="font-serif text-gray-700 leading-relaxed space-y-6 text-lg">
        {intro.map((paragraph) => (
          <p>
            {paragraph.label && (
              <strong class="font-sans uppercase text-brand-cyan tracking-widest text-sm block mb-1">
                {paragraph.label}
              </strong>
            )}
            {paragraph.content}
          </p>
        ))}

        <div class="pt-8">
          <h3 class="font-display font-bold text-2xl uppercase text-brand-dark mb-6">Toolkit</h3>
          <div class="grid grid-cols-2 gap-4 font-sans text-sm font-bold uppercase tracking-wide">
            <div class="space-y-2">
              {toolkit.slice(0, Math.ceil(toolkit.length / 2)).map((item) => (
                <div class="flex items-center gap-2 text-gray-500">
                  <span class="w-2 h-2 bg-brand-cyan rounded-full"></span>
                  {item}
                </div>
              ))}
            </div>
            <div class="space-y-2">
              {toolkit.slice(Math.ceil(toolkit.length / 2)).map((item) => (
                <div class="flex items-center gap-2 text-gray-500">
                  <span class="w-2 h-2 bg-brand-cyan rounded-full"></span>
                  {item}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative h-full min-h-[500px] bg-brand-dark overflow-hidden rounded-lg shadow-2xl">
      <div class="absolute inset-0 opacity-20">
        <svg width="100%" height="100%">
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1" />
          </pattern>
          <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>
      </div>

      <div class="absolute inset-0 flex items-center justify-center">
        <ManSilhouette class="h-4/5 text-brand-cyan drop-shadow-[0_0_15px_rgba(0,174,239,0.5)]" />
      </div>

      <div class="absolute bottom-8 left-8 right-8 bg-white/10 backdrop-blur-md p-6 border-l-4 border-brand-cyan">
        <p class="text-white font-serif italic text-lg">"{quote.text}"</p>
        <p class="text-brand-cyan mt-2 font-display uppercase font-bold text-sm tracking-widest">â€” {quote.author}</p>
      </div>
    </div>
  </div>
</div>
