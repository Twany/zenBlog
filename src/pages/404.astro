---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLocalizedPath } from '../utils/i18n';

---
<BaseLayout title="Page Not Found" description="This page does not exist." lang="en">
  <div class="max-w-4xl mx-auto px-6 py-32 text-center">
    <p class="font-display text-6xl text-brand-dark mb-6">404</p>
    <h1 class="font-serif text-3xl text-gray-700 mb-6">This page wandered off the map.</h1>
    <a href={getLocalizedPath('/', 'en')} class="text-brand-cyan font-bold uppercase tracking-widest text-sm">Back to home</a>
  </div>
</BaseLayout>
