---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLocaleFromPath, getLocalizedPath } from '../utils/i18n';

const lang = getLocaleFromPath(Astro.url.pathname);

const content = {
  en: {
    title: 'Page Not Found',
    heading: '404',
    message: 'This page wandered off the map.',
    backHome: 'Back to Home',
  },
  zh: {
    title: '页面未找到',
    heading: '404',
    message: '这个页面迷路了。',
    backHome: '返回首页',
  },
};

const t = content[lang];
---
<BaseLayout title={t.title} lang={lang}>
  <div class="max-w-4xl mx-auto px-6 py-32 text-center">
    <p class="font-display text-8xl md:text-9xl text-brand-cyan mb-6 animate-fade-in">{t.heading}</p>
    <h1 class="font-serif text-2xl md:text-3xl text-gray-700 mb-8">{t.message}</h1>
    <a
      href={getLocalizedPath('/', lang)}
      class="inline-block bg-brand-cyan text-white font-display font-bold uppercase tracking-widest py-3 px-8 hover:bg-brand-dark transition-colors"
    >
      {t.backHome}
    </a>
  </div>
</BaseLayout>
